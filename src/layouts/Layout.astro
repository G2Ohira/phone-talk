---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Phone Talkは、2024年4月に設立された日本初のボイスアルバムサービスです。イベントで、来場者が受話器に向かってお話頂いた声を小さいラジオに入れてプレゼントする伝言サービスです。テキストでは伝わらない、その時の感情、間、声色をそのままの純度でお届けします。" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" href="/favicon.ico" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link rel="sitemap" href="/sitemap-index.xml" />
		<link href="https://fonts.googleapis.com/css2?family=Libre+Bodoni:ital,wght@0,400..700;1,400..700&display=swap" rel="stylesheet" media="print" onload='this.media="all"'>
		<meta name="generator" content={Astro.generator} />
		<meta name="google-site-verification" content="pWAXL0v-bgXiTuMlC8v8RjcJlPS5Gw6mphUmQ3-Js4o" />
		<title>{title}</title>
		<script>
			import '../scripts/typekit.js';
		</script>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
  @font-face {
    font-family: 'Koburina';
    src: url("https://phone-talk.co.jp/fonts/KoburinaStdNW1.otf") format('otf');
    font-weight: light;
    font-style: normal;
    font-display: swap;
  }
  @font-face {
    font-family: 'Koburina';
    src: url("https://phone-talk.co.jp/fonts/KoburinaStdNW3.otf") format('otf');
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }
  @font-face {
    font-family: 'Koburina';
    src: url("https://phone-talk.co.jp/fonts/KoburinaStdNW6.otf") format('otf');
    font-weight: bold;
    font-style: normal;
    font-display: swap;
  }
	* {
		font-family: 'Koburina', sans-serif;
	}
	body {
		@apply bg-white;
	}
</style>
